  const classNameArray  = className.split(" ");
  const selector = `.${classNameArray.join(".")} .bc-collapsible-section`
  const collapsibleSection = document.querySelector(selector);
  const title = collapsibleSection?.querySelector('.bc-collapsible-section__title');

  if(title && collapsibleSection) {
    title.addEventListener('click', () => {
      collapsibleSection.getAttribute("open") === "" ? 
