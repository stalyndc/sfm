# SimpleFeedMaker â€” root .htaccess
# - Force HTTPS (works behind proxies/CDNs)
# - Pass /feeds/* files straight through
# - Friendly error pages
# - Light security headers compatible with Bootstrap CDN, Google Fonts, and GTM
# - Disable directory listing
# - Short caching for feed files
# - Correct JSON Feed MIME type

RewriteEngine On

# ------------------------------------------------------------------
# Force HTTPS (supports proxies that set X-Forwarded-Proto)
# ------------------------------------------------------------------
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Health check passthrough (if you use /health.php)
RewriteRule ^health\.php$ - [L]

# ------------------------------------------------------------------
# Optional: ensure directory URLs have a trailing slash
# ------------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ $1/ [L,R=301]

# ------------------------------------------------------------------
# Feeds are static files in /feeds; let them pass through directly.
# ------------------------------------------------------------------
RewriteRule ^feeds/ - [L]

# Block access to hidden dotfiles anywhere
RewriteRule (^|/)\. - [F]

# ------------------------------------------------------------------
# Security headers (safe defaults for shared hosting)
# ------------------------------------------------------------------
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "interest-cohort=()"
  Header always set Cross-Origin-Opener-Policy "same-origin"
  Header always set Cross-Origin-Resource-Policy "same-origin"

  # CSP: allow self, Google Tag Manager, Google Analytics, jsDelivr, Google Fonts.
  # Inline is allowed (you use a small inline script).
  Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://cdn.jsdelivr.net; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src https://fonts.gstatic.com data:; frame-ancestors 'self'; base-uri 'self'; form-action 'self'"
</IfModule>

# ------------------------------------------------------------------
# Friendly error documents
# ------------------------------------------------------------------
ErrorDocument 404 /errors/404.html
ErrorDocument 500 /errors/50x.html
ErrorDocument 502 /errors/50x.html
ErrorDocument 503 /errors/50x.html
ErrorDocument 504 /errors/50x.html

# ------------------------------------------------------------------
# Disable directory listing
# ------------------------------------------------------------------
Options -Indexes

# ------------------------------------------------------------------
# Compression (if available)
# ------------------------------------------------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE \
    text/html text/plain text/css application/javascript application/json \
    application/xml image/svg+xml
</IfModule>

# ------------------------------------------------------------------
# Caching for feeds (short, to keep readers reasonably fresh)
# ------------------------------------------------------------------
<IfModule mod_headers.c>
  <FilesMatch "^feeds/.*\.(xml|json)$">
    Header set Cache-Control "public, max-age=300"
  </FilesMatch>
</IfModule>

# ------------------------------------------------------------------
# Ensure correct JSON Feed MIME when served from /feeds
# JSON Feed recommends application/feed+json
# ------------------------------------------------------------------
<IfModule mod_headers.c>
  <FilesMatch "^feeds/.*\.json$">
    Header set Content-Type "application/feed+json; charset=UTF-8"
  </FilesMatch>
</IfModule>
