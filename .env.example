# SimpleFeedMaker Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
SFM_APP_NAME=SimpleFeedMaker
SFM_ENVIRONMENT=production
SFM_DEBUG=false

# Cache Configuration
SFM_CACHE_TTL=3600
SFM_CACHE_DIR=feeds/.httpcache

# Rate Limiting
SFM_RATE_LIMIT_REQUESTS=20
SFM_RATE_LIMIT_WINDOW=60

# HTTP Client Settings
SFM_HTTP_TIMEOUT=30
SFM_HTTP_CONNECT_TIMEOUT=10
SFM_HTTP_USER_AGENT=SimpleFeedMaker/1.0

# Logging Configuration
SFM_LOG_LEVEL=info
SFM_LOG_PATH=secure/logs/app.log

# Security Settings
SFM_TRUSTED_PROXIES=
SFM_ALERT_EMAIL=
SFM_HEALTH_ALERT_EMAIL=

# Feed Processing
SFM_MAX_FEED_ITEMS=50
SFE_MAX_CONTENT_LENGTH=100000

# Optional: External Services
# SFM_RECAPTCHA_SITE_KEY=
# SFM_RECAPTCHA_SECRET_KEY=
# SFM_MAILER_HOST=
# SFM_MAILER_PORT=587
# SFM_MAILER_USERNAME=
# SFM_MAILER_PASSWORD=
# SFM_MAILER_FROM_EMAIL=
# SFM_MAILER_FROM_NAME=
